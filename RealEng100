        let myCategoryChart;
        let currentCategory = 'all';
        let currentSearchTerm = '';

        const categoryData = {
            labels: ["ì¼ìƒ ëŒ€í™”", "ì˜ê²¬ í‘œí˜„ ë° í† ë¡ ", "ì§ì¥ ë° ë¹„ì¦ˆë‹ˆìŠ¤", "ì—¬í–‰ ë° ê¸¸ ë¬»ê¸°", "ë¶€íƒ ë° ì œì•ˆ", "ê°ì • ë° ëŠë‚Œ í‘œí˜„", "ê´€ê³„ ë° ì‚¬íšŒìƒí™œ"],
            counts: [20, 20, 20, 10, 10, 10, 10]
        };

        const categoryMap = {
            "ì¼ìƒ ëŒ€í™”": "ì¼ìƒ ëŒ€í™”",
            "ì˜ê²¬ í‘œí˜„ ë° í† ë¡ ": "ì˜ê²¬ í‘œí˜„ ë° í† ë¡ ",
            "ì§ì¥ ë° ë¹„ì¦ˆë‹ˆìŠ¤": "ì§ì¥ ë° ë¹„ì¦ˆë‹ˆìŠ¤",
            "ì—¬í–‰ ë° ê¸¸ ë¬»ê¸°": "ì—¬í–‰ ë° ê¸¸ ë¬»ê¸°",
            "ë¶€íƒ ë° ì œì•ˆ": "ë¶€íƒ ë° ì œì•ˆ",
            "ê°ì • ë° ëŠë‚Œ í‘œí˜„": "ê°ì • ë° ëŠë‚Œ í‘œí˜„",
            "ê´€ê³„ ë° ì‚¬íšŒìƒí™œ": "ê´€ê³„ ë° ì‚¬íšŒìƒí™œ"
        };
        
        document.addEventListener('DOMContentLoaded', () => {
            renderChart();
            renderSentences();
            setupListeners();
            // Pre-load voices if possible
            window.speechSynthesis.getVoices();
        });

        function renderChart() {
            const ctx = document.getElementById('categoryChart').getContext('2d');
            myCategoryChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: categoryData.labels,
                    datasets: [{
                        data: categoryData.counts,
                        backgroundColor: [
                            '#3B82F6', '#10B981', '#F59E0B', '#EF4444', 
                            '#8B5CF6', '#EC4899', '#6366F1'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    family: "'Noto Sans KR', sans-serif"
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw}ê°œ`;
                                }
                            }
                        }
                    },
                    onClick: handleChartClick
                }
            });
        }

        function renderSentences() {
            const grid = document.getElementById('sentence-grid');
            grid.innerHTML = '';
            
            const filteredSentences = sentences.filter(s => {
                const matchesCategory = currentCategory === 'all' || s.category === currentCategory;
                const matchesSearch = currentSearchTerm === '' || 
                                      s.sentence.toLowerCase().includes(currentSearchTerm) ||
                                      s.situation.toLowerCase().includes(currentSearchTerm) ||
                                      s.examples.join(' ').toLowerCase().includes(currentSearchTerm);
                return matchesCategory && matchesSearch;
            });

            if (filteredSentences.length === 0) {
                grid.innerHTML = `<p class="text-gray-600 col-span-full text-center">ì¼ì¹˜í•˜ëŠ” ë¬¸ì¥ì´ ì—†ìŠµë‹ˆë‹¤.</p>`;
                return;
            }

            filteredSentences.forEach(s => {
                const card = `
                    <div class="sentence-card bg-white rounded-xl shadow-md overflow-hidden" data-category="${s.category}">
                        <div class="p-5 cursor-pointer sentence-card-toggle hover:bg-gray-100 relative group">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-xs font-semibold uppercase tracking-wider ${getCategoryColor(s.category)}">${s.category}</span>
                                <div class="flex items-center space-x-2">
                                    <button onclick="speakText('${escapeSingleQuotes(s.sentence)}', this); event.stopPropagation();" class="text-gray-400 hover:text-blue-600 transition-colors p-1 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-300" title="ë°œìŒ ë“£ê¸°">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                                        </svg>
                                    </button>
                                    <span class="text-gray-400 text-xl transition-transform transform duration-200 toggle-icon">+</span>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900 pr-8">${s.sentence}</h3>
                        </div>
                        <div class="sentence-card-details hidden bg-gray-50 p-5 border-t border-gray-200">
                            <div class="mb-4">
                                <h4 class="font-semibold text-sm text-gray-700 mb-1">[ìƒí™© ì´ë¯¸ì§€]</h4>
                                <p class="text-gray-600 text-sm">${s.situation}</p>
                            </div>
                            <div>
                                <h4 class="font-semibold text-sm text-gray-700 mb-2">[í™œìš© ë¬¸ì¥]</h4>
                                <ul class="list-disc list-inside space-y-2 text-sm text-gray-600">
                                    ${s.examples.map(ex => `
                                        <li class="flex items-start justify-between group/ex">
                                            <span>${ex}</span>
                                            <button onclick="speakText('${escapeSingleQuotes(ex)}', this); event.stopPropagation();" class="ml-2 text-gray-300 hover:text-blue-500 opacity-0 group-hover/ex:opacity-100 transition-opacity" title="ì´ ë¬¸ì¥ ë“£ê¸°">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                                                </svg>
                                            </button>
                                        </li>
                                    `).join('')}
                                </ul>
                            </div>
                        </div>
                    </div>
                `;
                grid.innerHTML += card;
            });

            addCardListeners();
        }

        function escapeSingleQuotes(str) {
            return str.replace(/'/g, "\\'");
        }

        function speakText(text, btnElement) {
            if ('speechSynthesis' in window) {
                // Cancel current speech if any
                window.speechSynthesis.cancel();

                const utterance = new SpeechSynthesisUtterance(text);
                
                // Try to set Voice to English
                const voices = window.speechSynthesis.getVoices();
                const englishVoice = voices.find(voice => voice.lang.includes('en-US')) || voices.find(voice => voice.lang.includes('en'));
                
                if (englishVoice) {
                    utterance.voice = englishVoice;
                }
                
                utterance.lang = 'en-US'; // Fallback
                utterance.rate = 0.9; // Slightly slower for clarity
                utterance.pitch = 1;

                // Visual feedback
                const icon = btnElement.querySelector('svg');
                icon.classList.add('speaking');
                
                utterance.onend = () => {
                     icon.classList.remove('speaking');
                };
                
                utterance.onerror = () => {
                    icon.classList.remove('speaking');
                }

                window.speechSynthesis.speak(utterance);
            } else {
                alert("ì´ ë¸Œë¼ìš°ì €ëŠ” ìŒì„± í•©ì„±ì„ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.");
            }
        }

        function getCategoryColor(category) {
            switch(category) {
                case "ì¼ìƒ ëŒ€í™”": return "text-blue-600";
                case "ì˜ê²¬ í‘œí˜„ ë° í† ë¡ ": return "text-green-600";
                case "ì§ì¥ ë° ë¹„ì¦ˆë‹ˆìŠ¤": return "text-yellow-600";
                case "ì—¬í–‰ ë° ê¸¸ ë¬»ê¸°": return "text-red-600";
                case "ë¶€íƒ ë° ì œì•ˆ": return "text-purple-600";
                case "ê°ì • ë° ëŠë‚Œ í‘œí˜„": return "text-pink-600";
                case "ê´€ê³„ ë° ì‚¬íšŒìƒí™œ": return "text-indigo-600";
                default: return "text-gray-600";
            }
        }

        function addCardListeners() {
            document.querySelectorAll('.sentence-card-toggle').forEach(toggle => {
                toggle.addEventListener('click', (e) => {
                    // Don't toggle if clicking the speaker button (handled by stopPropagation inline, but good safety)
                    if(e.target.closest('button')) return;

                    const details = toggle.nextElementSibling;
                    const icon = toggle.querySelector('.toggle-icon');
                    details.classList.toggle('hidden');
                    icon.textContent = details.classList.contains('hidden') ? '+' : 'âˆ’';
                });
            });
        }

        function setupListeners() {
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    currentCategory = btn.dataset.category;
                    
                    document.querySelectorAll('.filter-btn').forEach(b => {
                        b.classList.remove('active', 'bg-blue-600', 'text-white');
                        b.classList.add('bg-gray-200', 'text-gray-700');
                    });
                    
                    btn.classList.add('active', 'bg-blue-600', 'text-white');
                    btn.classList.remove('bg-gray-200', 'text-gray-700');
                    
                    renderSentences();
                });
            });

            document.getElementById('search-bar').addEventListener('input', (e) => {
                currentSearchTerm = e.target.value.toLowerCase();
                renderSentences();
            });
        }

        function handleChartClick(evt) {
            const points = myCategoryChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);
            if (points.length) {
                const firstPoint = points[0];
                const label = myCategoryChart.data.labels[firstPoint.index];
                const category = categoryMap[label];
                
                if (category) {
                    currentCategory = category;
                    currentSearchTerm = '';
                    document.getElementById('search-bar').value = '';
                    
                    document.querySelectorAll('.filter-btn').forEach(b => {
                        b.classList.remove('active', 'bg-blue-600', 'text-white');
                        b.classList.add('bg-gray-200', 'text-gray-700');
                        if (b.dataset.category === category) {
                            b.classList.add('active', 'bg-blue-600', 'text-white');
                            b.classList.remove('bg-gray-200', 'text-gray-700');
                        }
                    });
                    
                    renderSentences();
                }
            }
        }

    </script>

</body>
</html>
